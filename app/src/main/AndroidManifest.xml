<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.kittylogs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CatProfileActivity"
            android:label="@string/title_activity_cat_profile"
            android:launchMode="singleTop"
            android:parentActivityName=".HomeScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mycompany.kittylogs.HomeScreen" />
        </activity>
        <activity
            android:name=".NotesActivity"
            android:label="@string/title_activity_notes"
            android:parentActivityName=".CatProfileActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mycompany.kittylogs.CatProfileActivity" />
        </activity>
        <activity
            android:name=".FoodActivity"
            android:label="@string/title_activity_food"
            android:parentActivityName=".CatProfileActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mycompany.kittylogs.CatProfileActivity" />
        </activity>
        <activity
            android:name=".WeightActivity"
            android:label="@string/title_activity_weight"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>